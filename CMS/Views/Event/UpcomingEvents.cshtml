@model List<CMS.MODEL.Event.EventCardModel>

@{
    ViewBag.Title = "Events";
}
<html xmlns="http://www.w3.org/1999/xhtml">
<head>
    <link rel="stylesheet" href="https://unpkg.com/aos@next/dist/aos.css" />
</head>
<body>

    <section class="page-title-section overlay" data-background="https://images.pexels.com/photos/462146/pexels-photo-462146.jpeg">
        <div class="container">
            <div class="row">
                <div class="col-md-8">
                    <ul class="list-inline custom-breadcrumb">
                        <li class="list-inline-item"><a class="h2 text-primary font-secondary" href="events.html">Events</a></li>
                        <li class="list-inline-item text-white h3 font-secondary nasted">EventName</li>
                    </ul>
                    <p class="text-lighten">Our courses offer a good compromise between the continuous assessment favoured by some universities and the emphasis placed on final exams by others.</p>
                </div>
            </div>
        </div>
    </section>

    <section class="section">
        <div>
            <h4 class="TexTAlignmentMiddle" data-aos="fade-up" data-aos-delay="300">Current Events</h4>
        </div>
        <div class="container">

            <div class="row">
                <!-- event -->
                @foreach (var item in Model)
            {
                    <div class="col-lg-4 col-sm-6 mb-5">
                        <div class="card rounded-0 hover-shadow" data-aos="flip-left">
                            <div class="card-img position-relative">
                                <img class="card-img-top rounded-0" src="@Url.Content(@item.ImagePath)" alt="event thumb">
                                <div class="card-date"><span>@item.EventDate.Day</span><br>@item.MonthName</div>
                            </div>
                            <div class="card-body">
                                <h4 class="card-title" data-aos="fade-up">@item.EventName</h4>
                                <!-- location -->
                                <p data-aos="fade-up" data-aos-delay="150"><i class="ti-calendar text-primary mr-2"></i><strong>Date : </strong>@item.EventDate.Date.ToShortDateString()</p>
                                <p data-aos="fade-up" data-aos-delay="250"><i class="ti-location-pin text-primary mr-2"></i><strong>Place : </strong><a style="color:black;text-decoration:none;font-size:14px" target="_blank" href="@item.Location">@item.EventPlace</a></p>
                                @*<p><i class="ti-location-pin text-primary mr-2"></i></p>
                                    <p><i class="ti-location-pin text-primary mr-2"></i>@item.Location</p>
                                    <p><i class="ti-location-pin text-primary mr-2"></i>@item.Location</p>*@
                                <p class="card-text mb-4" data-aos="fade-up" data-aos-delay="350">
                                    @item.EventShortDetails
                                </p>
                            </div>
                            <a href="/Event/EventSchedules?EviD=@item.EventGuid" class="btn btn-primary btn-sm">View Event</a>
                        </div>
                    </div>
                }
            </div>
        </div>
        <div>
        </div>
    </section>
    <script src="https://unpkg.com/aos@next/dist/aos.js"></script>
    <script>
        AOS.init();
    </script>

</body>
</html>
