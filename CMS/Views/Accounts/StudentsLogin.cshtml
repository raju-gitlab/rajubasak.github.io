@model CMS.MODEL.Master.ItemCode
@{
    ViewBag.Title = "StudentsLogin";
    Layout = null;
}

<html>
<head>
    <title>KITM - Students Login</title>
    <link rel="stylesheet" href="~/Styles/LoginAndRegister/style.css">
    <link href="https://fonts.googleapis.com/css?family=Poppins:600&display=swap" rel="stylesheet">
    <script src="https://kit.fontawesome.com/a81368914c.js"></script>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-beta3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-eOJMYsd53ii+scO/bJGFsiCZc+5NDVN2yr8+0RDqr0Ql0h+rP48ckxlpbzKgwra6" crossorigin="anonymous">
    <script src="https://code.jquery.com/jquery-3.2.1.slim.min.js" integrity="sha384-KJ3o2DKtIkvYIK3UENzmM7KCkRr/rE9/Qpg6aAZGJwFDMVNA/GpGFF93hXpG5KkN" crossorigin="anonymous"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.12.9/umd/popper.min.js" integrity="sha384-ApNbgh9B+Y1QKtv3Rn7W3mgPxhU9K/ScQsAP7hUibX39j7fakFPskvXusvfa0b4Q" crossorigin="anonymous"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/js/bootstrap.min.js" integrity="sha384-JZR6Spejh4U02d8jOt6vLEHfe/JQGiRRSQQxSfFWpi1MquVdAyjUar5+76PVCmYl" crossorigin="anonymous"></script>
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/css/bootstrap.min.css" integrity="sha384-Gn5384xqQ1aoWXA+058RXPxPg6fy4IWvTNh0E263XmFcJlSAwiGgFAW/dAiS6JXm" crossorigin="anonymous">
    <script src="~/Scripts/jquery-3.4.1.min.js"></script>
    <meta name="viewport" content="width=device-width, initial-scale=1">
</head>
<body>
    @if (ViewBag.SuccessFullyVerified == true)
            {
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            Your account is verified successfully.You can login now.
            <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                <span aria-hidden="true">&times;</span>
            </button>
        </div>
    }
    @if (ViewBag.NewCodeUpdated == true)
            {
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            New verification code created.Check your mail box.
            <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                <span aria-hidden="true">&times;</span>
            </button>
        </div>
    }
    @if (ViewBag.VarifyCancel == true)
            {
        <div class="alert alert-info alert-dismissible fade show" role="alert">
            Your account is not verified.Click verify link,send on your registred email address Or <a href="https://localhost:44377/Accounts/SetnewStudentVerificationCode?RegId=@Model.Value" style="display:inline;text-decoration:none;"><strong>Click Here</strong></a> for get verify again.
            <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                <span aria-hidden="true">&times;</span>
            </button>
        </div>
    }
    @if (ViewBag.IsSuccess == true)
    {
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            <strong>Success!</strong> Your account is created Successfully.A account verification related link is successfully send on your registred email.Please Verify Your account to login.If You not get email then <strong>Click Here</strong>
            <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                <span aria-hidden="true">&times;</span>
            </button>
        </div>
    }
    @if (ViewBag.WrongCredentials == true)
    {
        <div class="alert alert-danger alert-dismissible fade show" role="alert">
            Something went wrong.Check your Login credentials again.
            <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                <span aria-hidden="true">&times;</span>
            </button>
        </div>
    }
    @if (ViewBag.StudentNotFound == true)
    {
        <div class="alert alert-danger alert-dismissible fade show" role="alert">
            Either you are nor a student otherwise you not register in our websight. For register <strong>Click Here</strong>
            <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                <span aria-hidden="true">&times;</span>
            </button>
        </div>
    }
    <img class="wave" src="~/Styles/LoginAndRegister/wave.png">
    <div class="container">
        <div class="img">
            <img src="~/Styles/LoginAndRegister/bg.svg">
        </div>
        <div class="login-content">
            <form action="/Accounts/StudentLoginPortal" method="post">
                <div>
                    <img src="~/Styles/LoginAndRegister/avatar.svg">
                    <h2 class="title">Welcome Student</h2>
                    <div class="input-div one">
                        <div class="i">
                            <i class="fas fa-user"></i>
                        </div>
                        <div class="div">
                            <h5>Student Reg No</h5>
                            <input type="text" name="Value" class="input">
                        </div>
                    </div>
                    <div class="input-div pass">
                        <div class="i">
                            <i class="fas fa-lock"></i>
                        </div>
                        <div class="div">
                            <h5>Password</h5>
                            <input type="password" name="Code" class="input">
                        </div>
                    </div>
                    <div style="display:flex;justify-content:space-between">
                        <a href="#" data-toggle="modal" data-target=".bd-example-modal-lg">Create Account</a>
                        <a href="#">Forgot Password?</a>
                    </div>
                    <input type="submit" class="btn" value="Login">
                </div>
            </form>
        </div>
    </div>
    <div class="modal fade bd-example-modal-lg" tabindex="-1" role="dialog" aria-labelledby="myLargeModalLabel" aria-hidden="true">
        <div class="modal-dialog modal-lg">
            <div class="modal-content">
                <form method="post" action="/Accounts/StudentsLogin">
                    <div class="form-row">
                        <div class="col">
                            <input type="text" class="form-control" placeholder="Your Registration No">
                        </div>
                        <div class="col">
                            <input type="password" class="form-control" placeholder="Password">
                        </div>
                    </div>
                    
                    <div class="form-group row">
                        <div class="col-sm-10">
                            <button type="submit" class="btn btn-primary btn-sm">Sign in</button>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
    <script type="text/javascript" src="~/Styles/LoginAndRegister/main.js"></script>
</body>
</html>