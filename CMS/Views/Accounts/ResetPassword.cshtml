        function myFunction() {
            var x = document.getElementById("myText").value;
            const arguments = new URLSearchParams(window.location.search);
            var UID = arguments.get('UserId');
            //var CsheduleId = arguments.get('SchiD');
            document.getElementById("setURL").href = "/Accounts/Verify?Code=" + x + "&Value=" + UID;
