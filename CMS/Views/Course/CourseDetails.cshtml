@model Tuple<List<CMS.MODEL.Master.CourseEditModel>, List<CMS.MODEL.Master.CourseTeacherModel>, List<CMS.MODEL.Master.CourseEditModel>>
@{
    ViewBag.Title = "CourseDetails";
}

<html xmlns="http://www.w3.org/1999/xhtml">
<head>
    <link rel="stylesheet" href="https://unpkg.com/aos@next/dist/aos.css" />
    <link rel="stylesheet" href="~/Styles/GlobalCssProperties/TextWrapImage.css" />
</head>
<body>
    <!-- page title -->
    @foreach (var item in Model.Item1)
    {
        <section class="page-title-section overlay" style="background-image: url('@Url.Content(@item.CourseImagePath)')">
            <div class="container">
                <div class="row">
                    <div class="col-md-8">
                        <ul class="list-inline custom-breadcrumb" data-aos="fade-right" data-aos-delay="250">
                            <li class="list-inline-item" ><a class="h2 text-primary font-secondary" href="courses.html">Courses</a></li>
                            <li class="list-inline-item text-white h3 font-secondary nasted">@item.CourseName</li>
                        </ul>
                        <p class="text-lighten" data-aos="fade-right" data-aos-delay="350">Our courses offer a good compromise between the continuous assessment favoured by some universities and the emphasis placed on final exams by others.</p>
                    </div>
                </div>
            </div>
        </section>
    }
    <!-- /page title -->
    <!-- section -->
    <section class="section-sm">
        <div class="container">
            <div class="row">
                @foreach (var imgitem in Model.Item1)
                {
                    <div class="col-12 mb-4" data-aos="zoom-in" data-aos-delay="450">
                        <!-- course thumb -->
                        <img src="@Url.Content(@imgitem.CourseImagePath)" class="img-fluid w-100">
                    </div>
                }
            </div>
            <!-- course info -->
            <div class="row align-items-center mb-5">
                @foreach (var item in Model.Item1)
                {
                    <div class="col-xl-3 order-1 col-sm-6 mb-4 mb-xl-0">
                        <h2>@item.CourseName</h2>
                        <div class="">
                            Bachelor Of Computer Application
                        </div>
                    </div>

                    <div class="col-xl-6 order-sm-3 order-xl-2 col-12 order-2">
                        <ul class="list-inline text-xl-center">
                            <li class="list-inline-item mr-4 mb-3 mb-sm-0">
                                <div class="d-flex align-items-center">
                                    <i class="ti-book text-primary icon-md mr-2"></i>
                                    <div class="text-left">
                                        <h6 class="mb-0">Total Semester</h6>
                                        <p class="mb-0">@item.TotalSemester</p>
                                    </div>
                                </div>
                            </li>
                            <li class="list-inline-item mr-4 mb-3 mb-sm-0">
                                <div class="d-flex align-items-center">
                                    <i class="ti-alarm-clock text-primary icon-md mr-2"></i>
                                    <div class="text-left">
                                        <h6 class="mb-0">DURATION</h6>
                                        <p class="mb-0">@item.CourseDuration</p>
                                    </div>
                                </div>
                            </li>
                            <li class="list-inline-item mr-4 mb-3 mb-sm-0">
                                <div class="d-flex align-items-center">
                                    <i class="ti-wallet text-primary icon-md mr-2"></i>
                                    <div class="text-left">
                                        <h6 class="mb-0">FEE</h6>
                                        <p class="mb-0">@item.FullCourseFess</p>
                                    </div>
                                </div>
                            </li>
                        </ul>
                    </div>
                }
                <div class="col-xl-3 text-sm-right text-left order-sm-2 order-3 order-xl-3 col-sm-6 mb-4 mb-xl-0">
                    <a href="#" class="btn btn-primary">Apply now</a>
                </div>
                <!-- border -->
                <div class="col-12 mt-4 order-4">
                    <div class="border-bottom border-primary"></div>
                </div>
            </div>
            <!-- course details -->
            <div class="row">
                @foreach (var item1 in Model.Item1)
            {
                    <div class="col-12 mb-4">
                        <h3 data-aos="fade-up">About Course</h3>
                        <p data-aos="fade-up" data-aos-delay="100">
                            @item1.CourseDetails
                        </p>
                    </div>
                }
                <div class="col-12 mb-4">
                    <h3 class="mb-3">Requirements</h3>
                    <div class="col-12 px-0">
                        <div class="row">
                            <div class="col-md-6">
                                <ul class="list-styled">
                                    <li>Lorem ipsum dolor sit amet consectetur adipisicing elit.</li>
                                    <li>Lorem ipsum dolor sit amet consectetur adipisicing elit.</li>
                                    <li>Lorem ipsum dolor sit amet consectetur adipisicing elit.</li>
                                    <li>Lorem ipsum dolor sit amet consectetur adipisicing elit.</li>
                                </ul>
                            </div>
                            <div class="col-md-6">
                                <ul class="list-styled">
                                    <li>Lorem ipsum dolor sit amet consectetur adipisicing elit.</li>
                                    <li>Lorem ipsum dolor sit amet consectetur adipisicing elit.</li>
                                    <li>Lorem ipsum dolor sit amet consectetur adipisicing elit.</li>
                                    <li>Lorem ipsum dolor sit amet consectetur adipisicing elit.</li>
                                </ul>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="col-12 mb-4">
                    <h3 class="mb-3">How to Apply</h3>
                    <ul class="list-styled">
                        <li data-aos="fade-right">
                            You Can Apply from either Online(From Our College Websight) Or Offline.You Can download Application Form from <a><strong>here</strong></a>
                        </li>
                        <li data-aos="fade-right" data-aos-delay="100">
                            Fill The Form In Above Case.
                        </li>
                        <li data-aos="fade-right" data-aos-delay="200">
                            Attach All Documents Which Are Mentioned Above.
                        </li>
                    </ul>
                </div>
                <div class="col-12 mb-5">
                    <h3 data-aos="fade-up">Fees and Funding</h3>
                    <p data-aos="fade-up" data-aos-delay="100">
