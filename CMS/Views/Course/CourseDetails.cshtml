                        consequuntur magni dolores eos qui ratione voluptatem sequi nesciunt. Neque porro quisquam est, qui dolorem
                        ipsum quia dolor sit amet, consectetur, adipisci velit, sed quia non numquam eius modi tempora incidunt ut
                        labore et dolore magnam aliquam quaerat voluptatem.
                    </p>
                </div>
                <!-- teacher -->
                @foreach (var item2 in Model.Item2)
            {
                    <div class="col-12">
                        <h5 class="mb-3" data-aos="fade-right">@item2.RoleName</h5>
                        <div class="d-flex justify-content-between align-items-center flex-wrap">
                            <div class="media mb-2 mb-sm-0">
                                <img class="mr-4 img-fluid" style="height: 98px;width: 113px;" src="@Url.Content(@item2.ImagePath)" alt="Teacher">
                                <div class="media-body" data-aos="fade-up" data-aos-delay="100">
                                    <h4 class="mt-0">@item2.TeacherName</h4>
                                    @item2.SubjectName
                                </div>
                            </div>
                            <div class="social-link">
                                <h6 class="d-none d-sm-block"data-aos="fade-left">Social Link</h6>
                                <ul class="list-inline">
                                    <li class="list-inline-item" data-aos="fade-up"><a class="d-inline-block text-light p-1" href="@item2.SocialLink1"><i class="ti-facebook"></i></a></li>
                                    <li class="list-inline-item" data-aos="fade-up" data-aos-delay="100"><a class="d-inline-block text-light p-1" href="@item2.SocialLink4"><i class="ti-twitter-alt"></i></a></li>
                                    <li class="list-inline-item" data-aos="fade-up" data-aos-delay="200"><a class="d-inline-block text-light p-1" href="@item2.SocialLink3"><i class="ti-linkedin"></i></a></li>
                                    <li class="list-inline-item" data-aos="fade-up" data-aos-delay="300"><a class="d-inline-block text-light p-1" href="@item2.SocialLink2"><i class="ti-instagram"></i></a></li>
                                </ul>
                            </div>
                        </div>
                        <div class="border-bottom border-primary mt-4"></div>
                    </div>
                }
            </div>
        </div>
    </section>
    <!-- /section -->
    

    <!-- related course -->
    <section class="section pt-0">
        <div class="container">
            <div class="row">
                <div class="col-12">
                    <h2 class="section-title">Others Courses</h2>
                </div>
            </div>
            <div class="row justify-content-center">
                <!-- course item -->
                @foreach (var item3 in Model.Item3)
            {
                    <div class="col-lg-4 col-sm-6 mb-5">
                        <div class="card p-0 border-primary rounded-0 hover-shadow" data-aos="fade-up">
                            <img class="card-img-top rounded-0" src="@item3.CourseImagePath" alt="course thumb">
                            <div class="card-body background-white">
                                <ul class="list-inline mb-2">
                                    <li class="list-inline-item"><i class="ti-calendar mr-1 text-color"></i>02-14-2018</li>
                                    <li class="list-inline-item"><a class="text-color" href="#">Humanities</a></li>
                                </ul>
                                <a href="course-single.html">
                                    <h4 class="card-title">@item3.CourseName</h4>
                                </a>
                                <p class="card-text mb-4">
                                    @item3.CourseDetails
                                </p>
                                <a href="/Course/CourseDetails?ciD=@item3.CourseGuid" class="btn btn-primary btn-sm">Apply now</a>
                            </div>
                        </div>
                    </div>
                }
                <!-- course item -->
            </div>
        </div>
    </section>
    <script src="https://unpkg.com/aos@next/dist/aos.js"></script>
    <script>
      AOS.init();
    </script>
    <!-- /related course -->
</body>
</html>